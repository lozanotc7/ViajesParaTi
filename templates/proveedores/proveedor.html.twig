{% extends 'structure.html.twig' %}

{% block page_title %}
    {{ proveedor.name }} ({{ proveedor.id }}) - Proveedor - Viajes Para Ti
{% endblock %}

{% block title %}
    {{ proveedor.name }} ({{ proveedor.id }})
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="index.html">Backoffice</a></li>
    <li class="breadcrumb-item">Proveedores</li>
    <li class="breadcrumb-item active">{{ proveedor.name }} ({{ proveedor.id }})</li>
{% endblock %}

{% block body %}
    <form>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                    <input class="form-control" id="inputName" type="text" placeholder="Nombre" value="{{ proveedor.name }}">
                    <label for="inputName">{{ proveedor.name }}</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input class="form-control" id="inputPhoneNumber" type="text" placeholder="Número de teléfono" value="{{ proveedor.phone }}">
                    <label for="inputPhoneNumber">{{ proveedor.phone }}</label>
                </div>
            </div>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com" value="{{ proveedor.email }}">
            <label for="inputEmail">{{ proveedor.email }}</label>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-floating mb-3 mb-md-0">
                    <select class="form-control" id="inputType">
                        <option value="1" {% proveedor.isActive == 1 ? "selected" : "" %}>Sí</option>
                        <option value="0" {% proveedor.isActive == 0 ? "selected" : "" %}>No</option>
                    </select>
                    <label for="checkActivo">¿Está activo?</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <select class="form-control" id="inputType">
                        {% for tipo in tipos %}
                            <option value="{{ tipo.id }}" {% proveedor.tipo.id == tipo.id ? "selected" : "" %}>{{ tipo.name }}</option>
                        {% endfor %}
                    </select>
                    <label for="inputType">Selecciona el Tipo</label>
                </div>
            </div>
        </div>
        <div class="mt-4 mb-0">
            <div class="d-grid"><a class="btn btn-primary btn-block" href="login.html">Crear Proveedor</a></div>
        </div>
    </form>
{% endblock %}